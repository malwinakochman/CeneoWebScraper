{% extends "base.html.jinja" %}

{% block content %}
    <h2>Pobierz opiniÄ™ o produkcie</h2>

    {% if error %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-heartbreak-fill"></i><strong>{{error}}</strong>
            <button type = "button" class = "btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}



    <form action="{{url_for('extract')}}" method="POST">
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                <label for="product_id" class="col-form-label">Kod produktu</label>
            </div>
            <div class="col-auto">
                <input type="text" id="product_id" name="product_id" class="form-control">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-pink" value="Pobierz">Pobierz</button>
            </div>
        </div>
    </form>
{% endblock content %}
